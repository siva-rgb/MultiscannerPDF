<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/container_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:id="@+id/passwordProtectedPDF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/option_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/app_name"
                android:tint="?attr/iconTintOnCard"
                tools:srcCompat="@drawable/baseline_enhanced_encryption_24" />

            <TextView
                android:id="@+id/option_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:lines="2"
                tools:text="set PDF Password" />
            
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>